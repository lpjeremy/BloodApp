<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

	<include layout="@layout/layout_custom_toolbar"/>


	<fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard android:layout_width="match_parent"
	                                                   android:layout_height="200dp"
	                                                   android:id="@+id/videoInfoPlayerView"/>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:gravity="center_vertical"
	              android:layout_marginTop="12dp"
	              android:paddingLeft="12dp"
	              android:background="@android:color/white"
	              android:paddingRight="12dp">
		<EditText android:layout_width="100dp" android:layout_height="wrap_content"
		          android:hint="1-20"
		          android:textSize="16sp"
		          android:gravity="center"
		          android:id="@+id/edtVideoInfoNumber"
		          android:layout_marginRight="20dp"/>
		<Button android:layout_width="0dp" android:layout_height="30dp"
		        android:background="@drawable/shape_36cfc9_radius25"
		        android:layout_weight="1"
		        android:id="@+id/btnVideoInfo"
		        android:text="播放"/>
	</LinearLayout>
</LinearLayout>
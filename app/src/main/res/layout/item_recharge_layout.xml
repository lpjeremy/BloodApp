<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/txtRechargeItemLayout">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:background="@drawable/border_36cfc9_radius4"
	              android:id="@+id/txtRechargeItemParent"
	              android:paddingTop="13dp"
	              android:gravity="center_horizontal"
	              android:paddingBottom="13dp"
	              android:orientation="vertical"
	              android:layout_marginBottom="14dp">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="100元"
				android:textColor="#ff999999"
				android:id="@+id/txtRechargeItemPrice"
				android:textSize="18sp"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="送20"
				android:id="@+id/txtRechargeItemFreeMoney"
				android:textColor="#ff999999" android:layout_marginTop="10dp"
				android:textSize="14sp"/>
	</LinearLayout>

</LinearLayout>
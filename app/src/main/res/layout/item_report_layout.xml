<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_bg_radius8"
              android:layout_marginBottom="12dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:paddingLeft="12dp"
              android:paddingTop="12dp"
              android:paddingRight="12dp"
              android:paddingBottom="8dp">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:gravity="center_vertical">
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:textColor="#ff333333"
		          android:textSize="16sp"
		          android:id="@+id/txtReportPatientName"
		          android:layout_marginRight="16dp"
		          android:text="@string/app_name"/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:textColor="#ff999999"
		          android:textSize="12sp"
		          android:id="@+id/txtReportPatientSex"
		          android:layout_marginRight="8dp"
		          android:text="@string/app_name"/>
		<TextView android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:textColor="#ff999999"
		          android:textSize="12sp"
		          android:id="@+id/txtReportPatientAge"
		          android:text="@string/app_name"/>
		<TextView android:layout_width="0dp"
		          android:layout_weight="1"
		          android:gravity="right"
		          android:layout_height="wrap_content"
		          android:textColor="#ff00c771"
		          android:textSize="12sp"
		          android:id="@+id/txtReportStatus"
		          android:text="@string/app_name"/>
	</LinearLayout>
	<TextView android:layout_width="match_parent" android:layout_height="wrap_content"
	          android:textColor="#ff999999"
	          android:textSize="12sp"
	          android:id="@+id/txtReportContent"
	          android:lineSpacingExtra="5dp"
	          android:layout_marginTop="8dp"
	          android:layout_marginBottom="4dp"
	          android:text="@string/app_name"/>

	<Button android:layout_width="wrap_content" android:layout_height="26dp"
	        android:paddingLeft="21dp"
	        android:paddingRight="21dp"
	        android:id="@+id/btnReport"
	        android:layout_gravity="right"
	        android:text="查看报告"
	        android:textColor="#ffffffff"
	        android:background="@drawable/shape_36cfc9_radius25"
	        android:textSize="12sp"/>
	<View style="@style/hLine"
	      android:layout_marginTop="7dp"/>
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:paddingTop="8dp">
		<TextView android:layout_width="0dp"
		          android:layout_weight="1"
		          android:layout_height="wrap_content"
		          android:textColor="#ff999999"
		          android:textSize="10sp"
		          android:id="@+id/txtReportOrderNo"
		          android:text="@string/app_name"/>
		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
		          android:textColor="#ff999999"
		          android:textSize="10sp"
		          android:text="@string/app_name"
		          android:id="@+id/txtReportTime"/>
	</LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<com.hysyyl.bloodapp.views.SearchLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:paddingTop="10dp"
                                        android:paddingBottom="10dp"
                                        android:background="@android:color/white"
                                        android:paddingLeft="12dp"
                                        android:paddingRight="12dp">
	<LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="30dp"
	              android:orientation="horizontal"
	              android:gravity="center_vertical"
	              android:background="@drawable/shape_cccccc_radius25">
		<ImageView android:layout_width="14dp"
		           android:layout_height="14dp"
		           android:src="@drawable/icon_search"
		           android:layout_marginStart="7dp"/>
		<EditText android:layout_width="0dp"
		          android:layout_weight="1"
		          android:layout_height="match_parent"
		          android:hint="@string/app_name"
		          android:textColorHint="#ff999999"
		          android:textColor="#ff333333"
		          android:background="@null"
		          android:textSize="13sp"
		          android:imeOptions="actionSearch"
		          android:paddingLeft="7dp"
		          android:paddingRight="7dp"
		          android:id="@+id/searchViewEdtSearch"
		          android:maxLines="1"/>
	</LinearLayout>
	<ImageView android:layout_width="20dp" android:layout_height="20dp"
	           android:src="@drawable/icon_black_service"
	           android:layout_marginStart="19dp"
	           android:id="@+id/searchViewImgService"/>

</com.hysyyl.bloodapp.views.SearchLayout>
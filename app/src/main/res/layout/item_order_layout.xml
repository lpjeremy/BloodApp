<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="@drawable/white_bg_radius8"
              android:padding="12dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:layout_marginBottom="12dp">
	<LinearLayout android:layout_width="match_parent"
	              android:orientation="horizontal"
	              android:gravity="bottom"
	              android:layout_height="wrap_content">
		<TextView
				android:id="@+id/txtOrderPatientName"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:textColor="#333333"
				android:textSize="16sp"
				android:paddingEnd="10dp"
				android:text="@string/app_name"/>
		<TextView
				android:id="@+id/txtOrderStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ffcccccc"
				android:textSize="10sp"
				android:text="@string/app_name"
				android:layout_marginRight="8dp"/>

		<TextView
				android:id="@+id/txtOrderMoney"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff333333"
				android:textSize="14sp"
				android:text="@string/app_name"/>
	</LinearLayout>

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:layout_marginBottom="12dp"
	              android:gravity="center_vertical"
	              android:layout_marginTop="10dp">
		<TextView
				android:id="@+id/txtOrderPatientSex"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#999999"
				android:textSize="12sp"
				android:layout_marginRight="12dp"
				android:text="@string/app_name"/>
		<TextView
				android:id="@+id/txtOrderPatientAge"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#999999"
				android:textSize="12sp"
				android:layout_marginRight="12dp"
				android:text="@string/app_name"/>
		<TextView
				android:id="@+id/txtOrderPatientStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff333333"
				android:textSize="10sp"
				android:text="@string/app_name"
				android:background="#ffe7e7e7"
				android:paddingTop="2dp"
				android:paddingBottom="2dp"
				android:paddingLeft="5dp"
				android:paddingRight="5dp"
		/>
	</LinearLayout>

	<TextView
			android:id="@+id/txtOrderGoodsName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#999999"
			android:maxLines="2"
			android:lineSpacingExtra="5dp"
			android:textSize="12sp"
			android:text="@string/app_name"/>
	<RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
		<TextView
				android:id="@+id/txtOrderPayStatus"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#ff666666"
				android:textSize="12sp"
				android:layout_centerVertical="true"
				android:text="@string/app_name"/>

		<Button android:layout_width="wrap_content"
		        android:layout_height="26dp"
		        android:paddingRight="33dp"
		        android:paddingLeft="33dp"
		        android:background="@drawable/shape_36cfc9_radius25"
		        android:text="支付"
		        android:textColor="#ffffffff"
		        android:textSize="12sp"
		        android:id="@+id/btnOrderPay"
		        android:layout_alignParentRight="true"
		        android:visibility="gone"
		        android:layout_centerVertical="true"/>

	</RelativeLayout>
	<View style="@style/hLine"
	      android:layout_marginTop="11dp"
	      android:layout_marginBottom="12dp"/>
	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal">
		<TextView
				android:id="@+id/txtOrderNo"
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="wrap_content"
				android:textColor="#cccccc"
				android:textSize="10sp"
				android:text="订单号："/>
		<TextView
				android:id="@+id/txtOrderTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#cccccc"
				android:textSize="10sp"
				android:text="@string/app_name"/>
	</LinearLayout>
</LinearLayout>
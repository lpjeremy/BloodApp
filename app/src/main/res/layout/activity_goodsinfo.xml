<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
	              android:orientation="vertical">
		<include layout="@layout/layout_custom_toolbar"/>


		<androidx.coordinatorlayout.widget.CoordinatorLayout android:layout_width="match_parent"
		                                                     android:layout_height="match_parent"
		                                                     android:fitsSystemWindows="true">
			<com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
			                                                 android:layout_height="wrap_content"
			                                                 android:fitsSystemWindows="true"
			                                                 android:background="@color/bg">
				<com.google.android.material.appbar.CollapsingToolbarLayout android:layout_width="match_parent"
				                                                            android:layout_height="wrap_content"
				                                                            android:fitsSystemWindows="true"
				                                                            app:layout_scrollFlags="scroll|snap">
					<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
					              android:orientation="vertical"
					              app:layout_collapseMode="parallax">
						<ImageView android:layout_width="match_parent" android:layout_height="160dp"
						           android:background="@drawable/img_advert"/>
						<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
						              android:orientation="vertical"
						              android:background="@android:color/white"
						              android:paddingLeft="12dp"
						              android:paddingRight="12dp"
						              android:paddingTop="11dp"
						              android:paddingBottom="10dp">
							<RelativeLayout android:layout_width="match_parent"
							                android:layout_height="wrap_content">
								<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
								          android:text="¥900.00"
								          android:textColor="#ffff3c45"
								          android:textSize="24sp"
								          android:layout_centerVertical="true"/>
								<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
								          android:text="销量：500+"
								          android:textColor="#ff999999"
								          android:textSize="11sp"
								          android:layout_alignParentRight="true"
								          android:layout_centerVertical="true"/>
							</RelativeLayout>
							<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
							          android:text="商品名称商品名称商品名称"
							          android:textColor="#ff333333"
							          android:textSize="16sp"
							          android:layout_marginTop="16dp"
							          android:layout_marginBottom="6dp"/>
							<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
							          android:text="商品说明商品说明商品说明商品说明商品说明商品说明商品说明商品说明商品说明商品说明"
							          android:textColor="#ff999999"
							          android:textSize="14sp"
							          android:lineSpacingExtra="5dp"
							          android:layout_marginBottom="8dp"/>
							<View style="@style/hLine"/>
							<LinearLayout android:layout_width="match_parent"
							              android:layout_height="wrap_content"
							              android:orientation="horizontal"
							              android:layout_marginTop="10dp"
							              android:gravity="center_vertical">
								<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
								          android:text="优惠券"
								          android:textColor="#ff333333"
								          android:textSize="14sp"/>
								<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
								              android:layout_weight="1">
									<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
									          android:text="优惠券1"
									          android:textColor="#ff333333"
									          android:textSize="11sp"/>
								</LinearLayout>
								<TextView
										android:layout_width="wrap_content" android:layout_height="wrap_content"
										android:text="可买券"
										android:textColor="#ff719bfb"
										android:textSize="10sp"
										android:layout_marginRight="11dp"/>
								<ImageView android:layout_width="16dp" android:layout_height="16dp"
								           android:src="@drawable/icon_arrow_gray"/>

							</LinearLayout>

						</LinearLayout>

						<LinearLayout android:layout_width="match_parent"
						              android:layout_height="wrap_content"
						              android:orientation="vertical"
						              android:layout_marginTop="8dp"
						              android:background="@android:color/white"
						              android:paddingLeft="12dp"
						              android:paddingRight="12dp"
						              android:paddingTop="13dp"
						              android:paddingBottom="14dp">
							<LinearLayout android:layout_width="match_parent"
							              android:layout_height="wrap_content"
							              android:gravity="center_vertical"
							              android:orientation="horizontal">
								<View android:layout_width="2dp" android:layout_height="10dp"
								      android:background="#36CFC9"/>
								<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="检测注意事项"
										android:textColor="#ff333333"
										android:textSize="12sp"
										android:layout_marginLeft="8dp"/>
								<LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
								              android:layout_weight="1"
								              android:gravity="right">
									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:text="禁食"
											android:textColor="#ff999999"
											android:textSize="10sp"
											android:background="#ffd8d8d8"
											android:paddingLeft="4dp"
											android:paddingRight="4dp"
											android:paddingTop="2dp"
											android:paddingBottom="2dp"/>
								</LinearLayout>
							</LinearLayout>
							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容注意事项文案内容"
									android:textColor="#ff999999"
									android:textSize="12sp"
									android:lineSpacingExtra="5dp"
									android:layout_marginTop="12dp"/>

						</LinearLayout>
					</LinearLayout>
				</com.google.android.material.appbar.CollapsingToolbarLayout>
				<LinearLayout android:layout_width="match_parent" android:layout_height="38dp"
				              android:orientation="horizontal"
				              android:background="@android:color/white"
				              android:layout_marginTop="8dp"
				              android:gravity="center">
					<com.google.android.material.tabs.TabLayout android:layout_width="wrap_content"
					                                            android:layout_height="wrap_content"
					                                            android:id="@+id/tabLayoutGoodsInfo"
					                                            app:tabBackground="@android:color/white"
					                                            app:tabIndicatorColor="#ff36CFC9"
					                                            app:tabIndicatorHeight="2dp"
					                                            app:tabMode="scrollable"
					                                            app:tabSelectedTextColor="#ff333333"
					                                            app:tabTextColor="#ff999999"
					                                            android:background="@android:color/white"/>
				</LinearLayout>
			</com.google.android.material.appbar.AppBarLayout>

			<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
			                                       android:layout_height="500dp"
			                                       app:layout_behavior="@string/appbar_scrolling_view_behavior">
				<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
				              android:orientation="vertical">

					<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
					          android:text="@string/app_name"
					          android:textColor="#ffff0000"
					          android:textSize="40sp"
					          android:layout_gravity="center_horizontal"
					          android:id="@+id/goodsInfoContent"/>
				</LinearLayout>
			</androidx.core.widget.NestedScrollView>
		</androidx.coordinatorlayout.widget.CoordinatorLayout>

	</LinearLayout>
	<!--<include layout="@layout/layout_loading_state"/>-->
</FrameLayout>
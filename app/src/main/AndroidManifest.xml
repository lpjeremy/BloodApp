<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.hysyyl.bloodapp">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
			android:name=".BloodApplication"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:networkSecurityConfig="@xml/network_security_config"
			android:roundIcon="@mipmap/ic_launcher_round"
			android:supportsRtl="true"
			android:theme="@style/AppTheme"
			tools:ignore="GoogleAppIndexingWarning">
		<activity
				android:name=".activity.main.MainActivity"
				android:configChanges="keyboardHidden|orientation|screenSize"
				android:label="@string/title_home"
				android:launchMode="singleTop"
				android:screenOrientation="portrait"
				android:windowSoftInputMode="stateHidden|adjustResize">
		</activity>
		<activity android:name=".activity.login.LoginActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".activity.set.SetActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/set"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.mine.userinfo.UserInfoActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/user_info"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.mine.account.AccountFlowActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/account_flow"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.goods.GoodsInfoActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/goods_info"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.mine.recharge.RechargeActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/recharge"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.video.VideoActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/video"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
		<activity android:name=".activity.video.VideoInfoActivity"
		          android:configChanges="keyboardHidden|orientation|screenSize"
		          android:label="@string/video"
		          android:launchMode="singleTop"
		          android:screenOrientation="portrait"
		          android:windowSoftInputMode="stateHidden|adjustResize"/>
	</application>

</manifest>